@using CopaDoMundo.Web.Enum
@model CopaDoMundo.Web.ViewModels.JogadorViewModel

@{
    ViewData["Title"] = "Criar";
}
<link href="~/css/index.css" rel="stylesheet" />
<h2>Criar</h2>

<h4>Cadastro de Jogador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apelido" class="control-label"></label>
                <input asp-for="Apelido" class="form-control" />
                <span asp-validation-for="Apelido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idade" class="control-label"></label>
                <input asp-for="Idade" class="form-control" />
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Posicao" class="control-label"></label>
                @*<select asp-for="Posicao" asp-items="Html.GetEnumSelectList(typeof (ePosicao)"></select>*@
                @*<span asp-validation-for="Posicao" class="text-danger"></span>*@
            </div>

            <div class="form-group">
                <label asp-for="Selecao" class="control-label"></label>
                <select asp-for="Selecao"
                        class="form-control"
                        asp-items="@(new SelectList(Model.Selecoes,"ID", "Nome"))"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Listar">Voltar</a>
</div>

